<Window x:Class="CadastroPessoas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadastroPessoas"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="430">
    <Grid Margin="0,0,23,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="26*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" Grid.ColumnSpan="3" Margin="0,0,0,222">
            <MenuItem Header="Pessoas" Height="22">
                <MenuItem x:Name="mnuCadastrar" Header="Cadastrar" Click="mnuCadastrar_Click"/>
                <MenuItem x:Name="mnuPEE" Header="Pesquisar / Editar / Excluir"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
